<body>
<div class="container">
    <h1>ðŸš€ Conjuga y Apuesta ðŸŽ²</h1>

    <div id="registro">
        <input id="nombre1" type="text" placeholder="ðŸŒŸ Jugador 1">
        <input id="nombre2" type="text" placeholder="ðŸŒŸ Jugador 2">
        <select id="numRondas">
            <option value="5">5 ðŸš©</option>
            <option value="10">10 ðŸš©</option>
            <option value="15">15 ðŸš©</option>
            <option value="20">20 ðŸš©</option>
        </select>
        <button onclick="iniciarJuego()">ðŸš¦ Comenzar</button>
    </div>

    <div id="juego" style="display:none;">
        <div id="jugadorTurno" class="jugador"></div>
        <div id="botonesApuesta">
            <button class="apuesta-btn" onclick="seleccionarApuesta(10)">10 ðŸ’°</button>
            <button class="apuesta-btn" onclick="seleccionarApuesta(20)">20 ðŸ’°</button>
            <button class="apuesta-btn" onclick="seleccionarApuesta(30)">30 ðŸ’°</button>
            <button class="apuesta-btn" onclick="seleccionarApuesta(50)">50 ðŸ’°</button>
        </div>
        <button onclick="mostrarPregunta()" id="btnApostar">ðŸš€ Apostar</button>
        <p id="pregunta"></p>
        <input id="respuesta" type="text" placeholder="ðŸ–‹ï¸ ConjugaciÃ³n" style="display:none;">
        <button onclick="comprobarRespuesta()" style="display:none;" id="btnRespuesta">âœ… Enviar</button>

        <div class="ranking" id="ranking"></div>
        <div class="contador" id="contadorAciertos"></div>
        <div class="contador" id="contadorRescates"></div>

        <div id="resultadoFinal" style="display:none; font-size:22px; margin-top:20px; color:#ff6347;"></div>
        <button id="btnRescate" style="display:none;" onclick="rescatarJugador()">ðŸ›Ÿ Rescatar Jugador</button>
        <button id="btnReiniciar" style="display:none;" onclick="location.reload()">ðŸ”„ Reiniciar</button>
    </div>
</div>

<script>
let puntos = [100, 100];
let jugadores = ['', ''];
let turno = 0;
let rondasTotales = 0;
let rondaActual = 0;
let jugadasRealizadas = 0;
let apuestaActual = 0;
let aciertos = [0, 0];
let rescates = [0, 0];
const verbos = [
    { verbo: 'cantar', modo: 'indicativo', tiempo: 'pretÃ©rito perfecto simple', persona: '3Âª plural', respuesta: 'ellos cantaron' },
    { verbo: 'comer', modo: 'indicativo', tiempo: 'presente', persona: '1Âª singular', respuesta: 'yo como' },
    { verbo: 'vivir', modo: 'indicativo', tiempo: 'futuro simple', persona: '2Âª plural', respuesta: 'vosotros vivirÃ©is' },
    { verbo: 'amar', modo: 'subjuntivo', tiempo: 'presente', persona: '1Âª plural', respuesta: 'nosotros amemos' },
    { verbo: 'correr', modo: 'imperativo', tiempo: 'afirmativo', persona: '2Âª singular', respuesta: 'tÃº corre' }
];
let actual = {};

function iniciarJuego() {
    jugadores[0] = document.getElementById('nombre1').value;
    jugadores[1] = document.getElementById('nombre2').value;
    rondasTotales = parseInt(document.getElementById('numRondas').value);

    if (jugadores[0] === '' || jugadores[1] === '') {
        alert('Ambos jugadores deben ingresar su nombre');
        return;
    }

    document.getElementById('registro').style.display = 'none';
    document.getElementById('juego').style.display = 'block';
    actualizarRanking();
    prepararTurno();
}

function seleccionarApuesta(valor) {
    apuestaActual = valor;
    document.querySelectorAll('.apuesta-btn').forEach(btn => btn.classList.remove('selected'));
    event.target.classList.add('selected');
}

function mostrarPregunta() {
    if (apuestaActual === 0 || apuestaActual > puntos[turno]) {
        alert('Selecciona una apuesta vÃ¡lida o insuficientes puntos');
        return;
    }
    actual = verbos[Math.floor(Math.random() * verbos.length)];
    document.getElementById('pregunta').innerText = `ðŸ‘‰ "${actual.verbo}" (${actual.modo}, ${actual.tiempo}, ${actual.persona})`;
    document.getElementById('respuesta').style.display = 'inline-block';
    document.getElementById('btnRespuesta').style.display = 'inline-block';
    document.getElementById('btnApostar').disabled = true;
}

function comprobarRespuesta() {
    let respuestaUsuario = document.getElementById('respuesta').value.trim().toLowerCase();
    if (respuestaUsuario === actual.respuesta) {
        puntos[turno] += apuestaActual;
        aciertos[turno]++;
    } else {
        puntos[turno] -= apuestaActual;
    }
    jugadasRealizadas++;
    turno = turno === 0 ? 1 : 0;
    apuestaActual = 0;
    document.querySelectorAll('.apuesta-btn').forEach(btn => btn.classList.remove('selected'));
    actualizarRanking();
    prepararTurno();
}

function rescatarJugador() {
    puntos = puntos.map((p, i) => {
        if (p <= 0 && i === turno) {
            rescates[i]++;
            return 50;
        }
        return p;
    });
    actualizarRanking();
    document.getElementById('btnRescate').style.display = 'none';
}

function prepararTurno() {
    if (jugadasRealizadas >= rondasTotales * 2) {
        let ganador = puntos[0] > puntos[1] ? jugadores[0] : puntos[1] > puntos[0] ? jugadores[1] : 'Empate';
        document.getElementById('resultadoFinal').innerText = `ðŸ† Juego terminado: ${ganador}`;
        ['botonesApuesta', 'btnApostar', 'btnRespuesta', 'respuesta', 'pregunta'].forEach(id => document.getElementById(id).style.display = 'none');
        document.getElementById('resultadoFinal').style.display = 'block';
        document.getElementById('btnReiniciar').style.display = 'inline-block';
        return;
    }
    if (jugadasRealizadas % 2 === 0) rondaActual++;
    document.getElementById('jugadorTurno').innerHTML = `ðŸŽ¯ Ronda ${rondaActual}/${rondasTotales} - ${jugadores[turno]} | ðŸ’Ž ${puntos[turno]}`;
    document.getElementById('pregunta').innerText = '';
    document.getElementById('respuesta').value = '';
    document.getElementById('respuesta').style.display = 'none';
    document.getElementById('btnRespuesta').style.display = 'none';
    document.getElementById('btnApostar').disabled = false;
    document.getElementById('btnRescate').style.display = puntos[turno] <= 0 ? 'inline-block' : 'none';
}

function actualizarRanking() {
    document.getElementById('ranking').innerHTML = `${jugadores[0]}: ðŸ’Ž${puntos[0]} | ${jugadores[1]}: ðŸ’Ž${puntos[1]}`;
    document.getElementById('contadorAciertos').innerText = `âœ… Aciertos: ${jugadores[0]} (${aciertos[0]}) | ${jugadores[1]} (${aciertos[1]})`;
    document.getElementById('contadorRescates').innerText = `ðŸ›Ÿ Rescates: ${jugadores[0]} (${rescates[0]}) | ${jugadores[1]} (${rescates[1]})`;
}
</script>
</body>
</html>
